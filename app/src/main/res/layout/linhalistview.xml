<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/botaocomprar"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:text="@string/comprar"
        app:layout_constraintBottom_toBottomOf="@+id/textproduto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textvendedor1"
        app:layout_constraintTop_toBottomOf="@+id/textproduto" />

    <TextView
        android:id="@+id/textvendedor1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="36dp"
        android:text="@string/textview"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botaocomprar"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/textproduto" />

    <TextView
        android:id="@+id/textproduto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textvendedor1"
        app:layout_constraintEnd_toStartOf="@+id/botaocomprar"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="@+id/textproduto"
        app:layout_constraintEnd_toStartOf="@+id/textvendedor1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textproduto"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>